@page
@model Alquiler.App.Presentacion.Clientes.DetailsModel
@{
    ViewData["Title"] = "Detalle Cliente";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos del cliente</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-primary">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="cliente.id" />


                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.identificacion"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.cliente.identificacion;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.nombre"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.cliente.nombre;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.correo"></label>
                            </div>
                            <div class="col-sm-6">
                               @Model.cliente.correo;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.celular"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.cliente.celular;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.tipoLicencia"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.cliente.tipoLicencia;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="cliente.licencia"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.cliente.licencia;
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
                        
